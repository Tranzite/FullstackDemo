      <form action="/forum" method="post"><!-- This works fine, this imports the message and sends it to the console later on in app.js-->
        <label for="fname">Name:</label>
        <input type="fname" name="fname">
        <label for="forumMessage">Message:</label>
        <input type="forumMmessage" name="forumMessage">
        <button type="submit">Click here to send!</button>
    </form>

    <div id="textbox"> <!-- For this to work I believe I need to create a list and import the list into this section, however I'm not sure how to achieve this-->
        

      <% for( let i = 0; i < messages.length; i++ ) { %> <!-- This loop creates a card and holds the users message and name everytime someone clicks the send button-->
        <div class="inner-main-body p-2 p-sm-3 collapse forum-content show">
          <div class="card mb-2 ">
              <div class="card-body p-2 p-sm-3 ">
                  <div class="media forum-item ">
                      <div class="media-body ">
                          <h6><a href="#" data-toggle="collapse" data-target=".forum-content" class="text-body"><%= messages[i]._name %></a></h6>
                          <p class="text-secondary">
                            <%= messages[i]._message %>
                          </p>
                      </div>
                      <div class="text-muted small text-center align-self-center">
    
                      </div>
                  </div>
              </div>
          </div>
          
        
    </div>
      <% } %>
          
      
  </div>

